{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.js"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["element-plus/global"],
        "lib": ["esnext", "dom"],
        "allowJs": true
    },

    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
